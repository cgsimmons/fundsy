<h1><%= @campaign.title %></h1>
<p><%= @campaign.body %></p>
<% if @campaign.draft? %>
  <p>
    Campain is in draft mode
    <%= link_to 'Publish', campaign_publishings_path(@campaign),
                           method: :post,
                           data: { confirm: 'Are you sure?' } %>
  </p>
<% elsif @campaign.published? %>
  <p>Campaign is published</p>
<% end %>
